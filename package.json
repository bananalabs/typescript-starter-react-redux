{
  "name": "typescript-starter-node",
  "version": "1.0.0",
  "description": "A starter package for typescript projects",
  "main": "dist/index.js",
  "scripts": {
    "copy": "cd src && find -E . -regex '.*\\.(json|css)' -type f -exec rsync -R {} ../build \\; && cd .."
    "css": "node ./node_modules/typed-css-modules/lib/cli.js src",
    "dev": "npm run css && cross-env NODE_ENV=development webpack-dev-server --inline --hot",

    "clean": "rimraf dist build coverage",
    "prebuild": "npm run clean",
    "build": "tsc && npm ",
    "postbuild": "npm run test",
    "build:watch": "tsc -w",
    "build:dist": "tsc -p tsconfig.dist.json",
    "sh": "npm-sh",
    "secure": "nsp check",
    "check": "npm-check -u",
    "lcheck": "license-checker --csv | grep -v \"MIT.*\\|BSD.*\\|ISC.*\\|WTFPL.*\\|CC-.*\\|Apache.*\"",
    "license-checker": "license-checker --exclude \"MIT, MIT*, MIT/X11, MIT License, BSD, BSD-2-Clause, BSD-3-Clause, BSD*, Apache, Apache-2.0, CC0-1.0, ISC, Public DOmain, WTFPL, (BSD-2-Clause OR MIT OR Apache-2.0), Apache License, Version 2.0, (MIT AND CC-BY-3.0)\"",

    "test": "npm run copy && istanbul cover ./node_modules/.bin/_mocha",
    "posttest": "node ./scripts/remapped-coverage.js --output ./coverage/typescript",
    "coverage": "istanbul check-coverage --statements 90 --functions 90 --branches 90 --lines 90 ./coverage/typescript/coverage.json"
  },
  "pre-commit": [
    "test"
  ],
  "pre-push": [
    "test",
    "check",
    "secure"
  ],
  "keywords": [
    "TypeScript",
    "starter",
    "node"
  ],
  "author": "Shishir Ramam",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^3.4.30",
    "@types/mocha": "^2.2.29",
    "blanket": "^1.2.3",
    "chai": "^3.5.0",
    "commander": "^2.9.0",
    "cross-env": "^2.0.0",
    "enzyme": "^2.4.1",
    "graceful-fs": "^4.1.5",
    "html-webpack-plugin": "^2.22.0",
    "imports-loader": "^0.6.5",
    "istanbul": "^0.4.4",
    "licensecheck": "^1.0.0",
    "mocha": "^3.0.1",
    "npm-check": "^5.2.3",
    "npm-sh": "^1.0.1",
    "nsp": "^2.6.1",
    "nsp-formatter-checkstyle": "^1.0.1",
    "nsp-formatter-remarkup": "^1.0.2",
    "pre-commit": "^1.1.3",
    "pre-push": "^0.1.1",
    "raw-loader": "^0.5.1",
    "react-addons-test-utils": "^15.3.0",
    "redux-devtools": "^3.3.1",
    "redux-devtools-chart-monitor": "^1.4.2",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-slider-monitor": "^1.0.7",
    "remap-istanbul": "^0.6.4",
    "rimraf": "^2.5.4",
    "shelljs-nodecli": "^0.1.1",
    "sinon": "^1.17.5",
    "source-map-loader": "^0.1.5",
    "ts-loader": "^0.8.2",
    "ts-node": "^1.2.2",
    "tslint": "^3.14.0",
    "tslint-loader": "^2.1.5",
    "typed-css-modules": "^0.1.12",
    "typescript": "^2.1.0-dev.20160808",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-hot-middleware": "^2.12.2"
  },
  "dependencies": {
    "css-loader": "^0.23.1",
    "postcss-cssnext": "^2.7.0",
    "postcss-focus": "^1.0.0",
    "postcss-reporter": "^1.4.1",
    "react": "^15.3.0",
    "react-dom": "^15.3.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.6.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "reselect": "^2.5.3",
    "style-loader": "^0.13.1"
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
