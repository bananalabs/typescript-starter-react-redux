{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "noImplicitAny": false,
    "rootDirs": ["app", "src", "node_modules"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "removeComments": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}
