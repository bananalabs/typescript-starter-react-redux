{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "declarationDir": "",
    "noImplicitAny": false,
    "rootDirs": ["src", "node_modules"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": "./src",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "app",
    "node_modules",
    "./src/**/*test.ts*",
    "./src/**/test/*",
    "./**/tests/*"
  ]
}